// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"features": {
		"inline_completion_provider": "none"
	},
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"theme": {
		"mode": "dark",
		"light": "One Light",
		"dark": "Ayu Dark"
	},
	"hard_tabs": true,
	"show_whitespaces": "all",
	"ui_font_family": "FiraCode Nerd Font",
	"buffer_font_family": "FiraCode Nerd Font",
	"vim_mode": true,
	"search": {
		"regex": true
	},
	// for transparent look
	"experimental.theme_overrides": {
		"background.appearance": "blurred",
		"background": "#10101040",
		"editor.background": "#10101040",
		"panel.background": "#10101040",
		"status_bar.background": "#10101040",
		"title_bar.background": "#10101040",
		"tab_bar.background": "#10101040",
		"tab.active_background": "#55555540",
		"tab.inactive_background": "#10101040",
		"toolbar.background": "#10101040",
		"editor.gutter.background": "#10101040",
		"terminal.background": "#10101060"
	}
}
